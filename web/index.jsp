    var chk_email=/^([a-zA-Z0-9\.])+\@(([a-zA-Z0-9])+\.)+([a-zA-Z0-9]{2,3})+$/;
    var chk_name=/^[A-Za-z ]{2,40}$/;
    var chk_cno=/^[0-9]{10,12}$/;
    
    function validate()
    {
        var name=form.name.value;
        var email=form.email.value;
        var contact=form.contact.value;
        var message=form.message.value;
        
        flag=1;
        if(!chk_name.test(name))
        {
            document.getElementById("n").innerHTML="Enter a valid Name";
            if(flag==1)
            {
                    form.name.focus;
                    flag=0;
            }
        }
        else{
            document.getElementById("n").innerHTML="";
        }
        if(!chk_email.test(email))
        {
            document.getElementById("e").innerHTML="Enter a valid Email-Id";
            if(flag==1)
            {
                    form.email.focus;
                    flag=0;
            }
        }
        else{
            document.getElementById("e").innerHTML="";
        }
        if(!chk_cno.test(contact))
        {
            document.getElementById("c").innerHTML="Enter a valid Contact Number";
            if(flag==1)
            {
                    form.contact.focus;
                    flag=0;
            }
        }
        else{
            document.getElementById("c").innerHTML="";
        }
        
        
        if(message=="")
       {
          document.getElementById("m").innerHTML="Write Message ";
          if(flag==1)
          {
              form.message.focus;
          }
          flag=0;
       }
       else{
             document.getElementById("m").innerHTML="";
       }
        
        if(flag==1)
            return true;	
        else
            return false;
    }
